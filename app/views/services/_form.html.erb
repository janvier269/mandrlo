<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.label :destination_id, "Destination ID" %><br>
    <%= f.select :destination_id, Destination.all.collect { |d| [ d.location, d.id ] }, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :shipper_id, "Shipper ID" %><br>
  <%= f.select :shipper_id, Shipper.all.collect { |s| [ s.shipco, s.id ] }, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :air_price, "Air Price per Lb." %><br>
    <%= f.text_field :air_price %>
  </div>
  <div class="field">
    <%= f.label :sea_price, "Sea Price per Sq.Ft." %><br>
    <%= f.text_field :sea_price %>
  </div>
  <div class="field">
    <%= f.label :national %><br>
    <%= f.check_box :national %>
  </div>
  <div class="field">
    <%= f.label :other %><br>
    <%= f.check_box :other %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
